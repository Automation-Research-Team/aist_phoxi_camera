<launch>

  <arg name="camera_name"	  default="aist_phoxi_camera"/>
  <arg name="id"		  default="InstalledExamples-basic-example"/>
  <!-- <arg name="id"		  default='"1711015"'/> -->
  <!-- <arg name="id"		  default="2018-09-015-LC3"/> -->
  <!-- <arg name="id"		  default="2020-01-098-LC3"/> -->
  <arg name="trigger_mode"	  default="0"/>
  <arg name="intensity_scale"	  default="0.5"/>
  <arg name="frame"		  default="$(arg camera_name)_sensor"/>
  <arg name="rate"		  default="10"/>
  <arg name="point_format"	  default="0"/>
  <arg name="send_point_cloud"	  default="true"/>
  <arg name="send_normal_map"	  default="true"/>
  <arg name="send_depth_map"	  default="true"/>
  <arg name="send_confidence_map" default="false"/>
  <arg name="send_texture"	  default="true"/>
  <arg name="external_manager"	  default="false"/>
  <arg name="manager"		  default=""/>

  <include file="$(find aist_phoxi_camera)/launch/run.launch">
    <arg name="camera_name"		value="$(arg camera_name)"/>
    <arg name="id"			value="$(arg id)"/>
    <arg name="trigger_mode"		value="$(arg trigger_mode)"/>
    <arg name="intensity_scale"		value="$(arg intensity_scale)"/>
    <arg name="frame"			value="$(arg frame)"/>
    <arg name="rate"			value="$(arg rate)"/>
    <arg name="point_format"		value="$(arg point_format)"/>
    <arg name="send_point_cloud"	value="$(arg send_point_cloud)"/>
    <arg name="send_normal_map"		value="$(arg send_normal_map)"/>
    <arg name="send_depth_map"		value="$(arg send_depth_map)"/>
    <arg name="send_confidence_map"	value="$(arg send_confidence_map)"/>
    <arg name="send_texture"		value="$(arg send_texture)"/>
    <arg name="manager"			value="$(arg manager)"/>
  </include>

  <node name="$(anon rviz)" pkg="rviz" type="rviz"
	args="-d $(find aist_phoxi_camera)/launch/aist_phoxi_camera.rviz"
	respawn="false" output="screen"/>
  <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure"/>

</launch>
